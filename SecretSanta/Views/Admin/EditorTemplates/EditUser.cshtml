@model SecretSanta.Models.EditUserModel
@{
    Layout = "";
}

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("EditUser", "Admin", FormMethod.Post, new {role = "form", @class = "form-horizontal"}))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Account.Id)
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Edit User</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.Account.Email, new {@class = "control-label col-sm-4"})
                    <div class="col-sm-8">
                        @Html.EditorFor(m => m.Account.Email)
                        @Html.ValidationMessageFor(m => m.Account.Email)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Account.DisplayName, new {@class = "control-label col-sm-4"})
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.Account.DisplayName, new {@class = "form-control"})
                        @Html.ValidationMessageFor(m => m.Account.DisplayName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Account.Picked, new {@class = "control-label col-sm-4"})
                    <div class="col-sm-8">
                        @Html.DropDownListFor(m => m.Account.Picked, Model.GetPickOptions(), "", new {@class = "form-control"})
                        @Html.ValidationMessageFor(m => m.Account.Picked)
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">Picked By</label>
                    <div class="col-sm-8">
                        @Html.DisplayFor(m => m.Account.GetPickedBy().DisplayName, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Account.DoNotPick, new {@class = "control-label col-sm-4"})
                    <div class="col-sm-8">
                        @Html.ListBoxFor(m => m.Account.DoNotPick, Model.GetDoNotPickOptions(), new {@class = "form-control", multiple = "multiple"})
                        @Html.ValidationMessageFor(m => m.Account.DoNotPick)
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        }
    </div>
</div>