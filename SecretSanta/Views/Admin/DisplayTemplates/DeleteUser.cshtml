@model EditUserModel
@{
    Layout = "";
}

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("DeleteUser", "Admin", FormMethod.Post, new {role = "form", @class = "form-horizontal"}))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Account.Id)
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Delete User</h4>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger">Are you sure you want to delete this user? This cannot be undone!</div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Account.Email, new {@class = "control-label col-sm-4"})
                    <div class="col-sm-8">
                        @Html.HiddenFor(m => m.Account.Email)
                        @Html.DisplayFor(m => m.Account.Email, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Account.DisplayName, new {@class = "control-label col-sm-4"})
                    <div class="col-sm-8">
                        @Html.HiddenFor(m => m.Account.DisplayName)
                        @Html.DisplayFor(m => m.Account.DisplayName, new {@class = "form-control"})
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary btn-danger">Delete</button>
            </div>
        }
    </div>
</div>