@model SecretSanta.Models.LogInModel
@{
    ViewBag.Title = "Log In";
}

<h1>Welcome to Secret Santa!</h1>

@using (Html.BeginForm("LogIn", "Account", FormMethod.Post, new {role = "form", @class = "form-horizontal"}))
{
    <fieldset>
        <legend>@ViewBag.Title</legend>

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new {@class = "control-label col-sm-2"})
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Log In</button>
            </div>
        </div>
    </fieldset>
}